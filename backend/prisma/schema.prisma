generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Schema for the apartment model

model Apartment {
  id          Int      @id @default(autoincrement())
  unitName    String
  unitNumber  String
  project     String
  price       Float
  bedrooms    Int
  bathrooms   Int
  area        Float
  description String
  images      String[]
  createdAt   DateTime @default(now())
}